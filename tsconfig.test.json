{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom", "node"],
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "src/**/*.test.tsx", 
    "src/**/*.test.ts",
    "src/test/**/*",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}
